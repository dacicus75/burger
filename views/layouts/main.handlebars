  <body>

    <!-- Page Container -->
    <div class="container-fluid">
    <center>
      <div class="row">
      <img src="assets/img/yellow-background-with-appetizing-burger-flat-design_23-2147634054.jpg" alt="Burger Img">
    <div class="jumbotron">
    <h1>Eat Da Burger!</h1>      
    <p>Choose a Burger from the list. Then devour it. <br> 
    </p>    

    
        
    </center>
    

      <br>
      

      <!-- Burger Content from index.handlebars -->
      {{{body}}}


      <br><br>

      <!-- Input New Burgers Form -->
      <form action="burger/create" method="POST"> 
        
        <!-- Text Area Input -->
        <div class="row">
          <!-- Empty Div to help center textarea -->
          <div class="col-md-3"></div> 

          <!-- Burger Input Box -->
          <div class="form-group col-md-6">
            <center><label for="new_burger" class="submitFont">Request a new burger!</label></center>
            <textarea class="form-control" placeholder="Add a burger" type="text" columns="6" rows="1" id="new_burger required value="" name="burger_name"></textarea>
          </div>
         
          <div class="col-md-3"></div> 
        </div>
      
        <!-- Submit Button -->
        <center>
          <button id="submit-button" type="submit" class="btn btn-danger">Make my Burger!</button>
        </center>
      </form>
      <br>
    </div>
